{{#validatable-form action="save" model=model}}
  <div style="margin-top:30px">
    <h4>Osobní údaje</h4>
    <hr>
  </div>

  <div class="form-group">
    <label for="name">Jméno:</label>
    {{input value=model.first_name class="form-control" style="width:100%;" required=true}}
  </div>

  <div class="form-group">
    <label for="surname">Přezdívka (nepovinné):</label>
    {{input value=model.nick_name class="form-control" required=false}}
  </div>

  <div class="form-group">
    <label for="surname">Přijmení:</label>
    {{input value=model.last_name class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="email">E-mail:</label>
    {{input value=model.email class="form-control" required=true type="email"}}
  </div>

  <div class="form-group">
    <label for="gender">Pohlaví:</label>
    {{#x-select value=model.gender class="form-control" id="gender" required=true}}
        {{#x-option value="male" selected=(is-equal "male" model.gender)}}Muž{{/x-option}}
        {{#x-option value="female" selected=(is-equal "female" model.gender)}}Žena{{/x-option}}
      {{/x-select}}
  </div>

  <div style="margin-top:30px">
    <h4>Adresa</h4>
    <hr>
  </div>
  <div class="form-group">

    <label for="street">Ulice:</label>
    {{input value=model.addr_street class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="city">Město:</label>
    {{input value=model.addr_city class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="psc">PSČ:</label>
    {{input value=model.addr_zip class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="country">Země:</label>
    {{#x-select value=model.addr_country class="form-control" required=true}}
      {{#each countries key="@index" as |item|}}
        {{#x-option value=item.short selected=(is-equal item.short model.addr_country)}}
          {{item.name}}
        {{/x-option}}
      {{/each}}
    {{/x-select}}
  </div>

  <hr>

  <div style="margin-top:30px">
    <h4>Škola</h4>
    <hr>
  </div>

  <div class="form-group">
    <label for="street">Název:</label>
    {{input value=model.school_name class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="street">Ulice:</label>
    {{input value=model.school_street class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="city">Město:</label>
    {{input value=model.school_city class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="psc">PSČ:</label>
    {{input value=model.school_zip class="form-control" required=true}}
  </div>

  <div class="form-group">
    <label for="country">Země:</label>
    {{#x-select value=model.school_country class="form-control" required=true}}
      {{#each countries key="@index" as |item|}}
        {{#x-option value=item.short selected=(is-equal item.short model.school_country)}}
          {{item.name}}
        {{/x-option}}
      {{/each}}
    {{/x-select}}
  </div>
        <!--
  <div class="form-group">
    <label for="school">Škola:</label> (formát: název, ulice, město, PSČ, stát - ČR nebo SR)  <!- -TODO dropdown menu ? - ->
    <input type="text" class="form-control" id="school">
  </div>
        -->

  <div class="form-group">
    <label for="year-maturita">(Předpokládaný) kalendařní rok maturity:</label>
    {{input type="number" min="1900" max="2200" value=model.school_finish class="form-control" required=true}}
  </div>

  <div style="margin-top:30px">
    <h4>Profil</h4>
    <hr>
  </div>

  <div class="form-group">
    <label for="description">Krátky popis sebe:</label>
    {{textarea class="form-control" rows="5" value=model.short_info}}
  </div>

  <div class="form-group">
    <label for="tshirt">Velikost trička:</label>
    {{#x-select value=model.tshirt_size class="form-control" required=true}}
      {{#each tshirt_size key="@index" as |item|}}
        {{#x-option value=item.short selected=(is-equal item.short model.tshirt_size)}}
          {{item.name}}
        {{/x-option}}
      {{/each}}
    {{/x-select}}
  </div>

  <div style="margin-top:30px">
    <h4>E-mailové notifikace</h4>
    <hr>
  </div>

  <div class="form-group">
    {{input type="checkbox" checked=model.notify_eval}}
    <label for="description">Notifikovat o opravení mého řešení.</label>

    <br>
    {{input type="checkbox" checked=model.notify_response}}
    <label for="description">Notifikovat o reakci na můj komentář.</label>

    <br>
    {{input type="checkbox" checked=model.notify_ksi}}
    <label for="description">Notifikovat o průběhu semináře (vydání nové vlny, ...).</label>

    <br>
    {{input type="checkbox" checked=model.notify_events}}
    <label for="description">Zasílat pozvánky na spřátelené akce (InterLoS, InterSoB, ...).</label>
  </div>

  <button type="submit" class="btn btn-primary {{if saving "disabled"}}"
    style="margin-bottom:20px; width:100%;">{{if saving "Ukládám..." "Ulož změny"}}</button>

  {{ale-rt type=alertType closeBtn=alertCloseBtn text=alertMsg}}

{{/validatable-form}}
