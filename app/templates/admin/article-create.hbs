<section id="admin-article-create" class="container content-section">
  <h2>Nový článek</h2>
  {{#link-to "admin/articles"}}zpět na přehled{{/link-to}}
  <div class="panel panel-ksi" style="margin-top:20px">
    <div class="panel-body">
      <div class="form-group">
        <label>Titulek:</label>
        {{input value=title class="form-control" required=true}}
      </div>
      <div class="form-group">
        <label>Obsah:</label>
        {{text-editor value=body}}
      </div>

      <div class="form-group">
        <label>Termín publikace:</label>
        {{bs-datetimepicker date=time_published updateDate=(action (mut time_published)) forceDateOutput=true locale='cs'}}
      </div>

      <div class="form-group">
        {{input type="checkbox" checked=published}} Zveřejněn
      </div>

      <div class="form-group">
        <label>Obrázek a&nbsp;přílohy bude možné přiložit po vytvoření článku.</label>
      </div>

      <div class="row" style="margin-left:0px; margin-top:20px">
        {{#unless saving}}
          <button class="btn btn-primary inline" id="save" {{action "article-create"}}>Vytvořit</button>
        {{else}}
          <button class="btn btn-primary inline disabled" id="save-disabled">Vytvářím článek...</button>
        {{/unless}}
      </div>

      {{#if error_status}}
        <div class="alert alert-danger" style="margin-top:20px">{{error_status}}</div>
      {{/if}}
      {{#if save_status}}
        <div class="alert alert-info" style="margin-top:20px">{{save_status}}</div>
      {{/if}}

    </div>
  </div>
</section>
