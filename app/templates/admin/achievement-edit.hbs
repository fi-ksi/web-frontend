<section id="admin-achievement-edit" class="container content-section" style="text-align:justify">
  <h2>Úprava trofeje</h2>
  {{#link-to "admin/achievements"}}zpět na přehled{{/link-to}}
  <div class="panel panel-ksi" style="margin-top:20px">
    <div class="panel-body">
      <div class="form-group">
        <label>Název:</label>
        {{input class="form-control" value=model.achievement.title}}
      </div>

      <div class="form-group">
        <label>Popis:</label>
        {{text-editor value=model.achievement.description}}
      </div>

      <div class="form-group">
        {{input type="checkbox" checked=model.achievement.persistent}} Perzistentní
      </div>

      <div class="form-group">
        <h3>Obrázek</h3>
        {{content-component model=model.content type='gallery' selectable=true selected=model.achievement.picture on_select="ach_select"}}
      </div>

      <div class="row" style="margin-left:0px; margin-top:20px">
        {{#if saving}}
            <button class="btn btn-primary inline disabled">Ukládám...</button>
        {{else}}
            <button class="btn btn-primary inline" {{action "save"}}>Uložit</button>
        {{/if}}
      </div>

      {{#if save_status}}
        <div class="alert alert-info" style="margin-top:20px">{{save_status}}</div>
      {{/if}}
    </div>
  </div>
</section>
